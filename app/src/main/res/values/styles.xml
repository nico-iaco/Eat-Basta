<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="editTextColor">@color/textColorLight</item>
    </style>

    <style name="AppThemeDark" parent="AppTheme">
        <item name="background">@color/black</item>
        <item name="backgroundTint">@color/black</item>
        <item name="editTextColor">@color/textColorDark</item>
        <item name="android:textColor">@color/textColorDark</item>
    </style>

    <style name="PrimaryRoundedButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="cornerRadius">25dp</item>
        <item name="background">@color/colorAccent</item>
        <item name="backgroundTint">@color/colorAccent</item>
    </style>

    <style name="InputTextStyling" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
    </style>

    <style name="ButtonWithoutMargin" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_margin">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>


</resources>
